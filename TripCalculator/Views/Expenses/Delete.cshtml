@model TripCalculator.Models.Expense

@{
    ViewBag.Title = "Delete";
}

    <div class="col-md-5 col-md-offset-4">
        <h4 class="text-danger">Are you sure you want to delete this expense?</h4>
        <dl class="dl-horizontal">

            <dt>
                @Html.DisplayNameFor(model => model.Description)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Description)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Cost)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Cost)
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                @Html.ActionLink("Back to Trip", "Details/" + ((int)ViewBag.tripId).ToString(), "Trips", null, new { @class="btn btn-primary" })
                <input type="submit" value="Delete" class="btn btn-danger" />
            </div>
        }
    </div>
