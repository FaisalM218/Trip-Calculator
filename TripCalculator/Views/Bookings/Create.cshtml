@model TripCalculator.Models.Booking

@{
    ViewBag.Title = "Create";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="col-md-5 col-md-offset-4 padding-10">
        <h4>Create New Booking</h4>
    </div>

    <div class="col-md-5 col-md-offset-4 padding-10">
        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group remove-margin">
                @Html.LabelFor(model => model.TripId, htmlAttributes: new { @class = "control-label" })
                <div>
                    @Html.DropDownList("TripId", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.TripId, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group remove-margin">
                @Html.LabelFor(model => model.UserId, htmlAttributes: new { @class = "control-label" })
                <div>
                    @Html.DropDownList("UserId", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.UserId, "", new { @class = "text-danger" })
                </div>
                <div>
                    @Html.ActionLink("New User", "Create", "Users")
                </div>
            </div>

            <div class="form-group remove-margin">
                <div class="margin-top-20">
                    <input type="submit" value="Create Booking" class="btn btn-info" />
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
