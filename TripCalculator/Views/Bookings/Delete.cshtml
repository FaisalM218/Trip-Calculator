@model TripCalculator.Models.Booking

@{
    ViewBag.Title = "Delete";
}

<div class="col-md-5 col-md-offset-4">
    <h4 class="text-danger">Are you sure you want to delete this user from the trip?</h4>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Trip.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Trip.Description)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.User.UserName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.User.UserName)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            @Html.ActionLink("Back to Trip", "Details/" + ((int)ViewBag.tripId).ToString(), "Trips", null, new { @class = "btn btn-primary" })
            <input type="submit" value="Delete" class="btn btn-danger" />
        </div>
    }
</div>
